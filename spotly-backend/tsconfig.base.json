{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "customConditions": ["@spotly-backend/source"],
    "baseUrl": ".",
    "paths": {
      "@spotly-backend/core": [
        "packages/spotly-backend-core/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
